{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-missing-affiliation-loi")) %}

<h1>{{ translate("txt-missing-affiliation-loi") }}</h1>

{% if paginator.pageRange > 0 %}
    <table class="table table-striped table-sm table-hover">
        <thead>
        <tr>
            <th>{{ translate("txt-organisation") }}</th>
            <th>{{ translate("txt-country") }}</th>
            <th>{{ translate("txt-project") }}</th>
            <th colspan="2">{{ translate("txt-remind") }}</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <td colspan="6"></td>
        </tr>
        </tfoot>
        <tbody>
        {% for affiliation in paginator.getCurrentItems() %}
            <tr id="affiliation-{{ affiliation.id }}">
                <td>{{ affiliationLink(affiliation,'view-admin','name') }}</td>
                <td>{{ affiliation.organisation.country }}</td>
                <td>{{ projectLink(affiliation.project,'view-admin','name') }}</td>
                <td>{{ loiLink(null, 'reminders-admin', 'text', affiliation) }}<br>
                    {% if affiliation.doaReminder.last.dateCreated %}
                        <small>{{ affiliation.doaReminder.last.dateCreated|string_date }}</small>
                    {% endif %}
                </td>
                <td>{{ loiLink(null, 'remind-admin', 'button', affiliation) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    {{ ztbalert().info(translate("txt-no-projects-found"))|raw }}
{% endif %}

{% include 'affiliation/partial/pagination-control' with {'paginator': paginator} %}
