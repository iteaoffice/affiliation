{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-missing-affiliation-doa")) %}

<h1>{{ translate("txt-missing-affiliation-doa") }}</h1>

<table class="table table-hover table-consended table-striped">
    <thead>
    <tr>
        <th>{{ translate("txt-organisation") }}</th>
        <th>{{ translate("txt-organisation-type") }}</th>
        <th>{{ translate("txt-country") }}</th>
        <th>{{ translate("txt-project") }}</th>
        <th>{{ translate("txt-reminders") }}</th>
        <th>{{ translate("txt-remind") }}</th>
    </tr>
    </thead>
    <tbody>
    {% for affiliation in affiliation %}
        <tr id="affiliation-{{ affiliation.id }}">
            <td>{{ affiliation }}</td>
            <td>{{ affiliation.organisation.type }}</td>
            <td>{{ affiliation.organisation.country }}</td>
            <td>{{ affiliation.project }}</td>
            <td>{{ doaLink(null, 'reminders-admin', 'text', affiliation) }}<br>
                {% if affiliation.doaReminder.last.dateCreated %}
                    <small>{{ affiliation.doaReminder.last.dateCreated|string_date }}</small>
                {% endif %}
            </td>
            <td>{{ doaLink(null, 'remind-admin', 'button', affiliation) }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
