{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-affiliation")) %}
{% do headTitle().append(translate("txt-question-list")) %}

{% do form.prepare() %}
{{ form().openTag(form)|raw }}
{% set filter = form.get('filter') %}

<input type="hidden" name="filter[order]" value="{{ order }}">
<input type="hidden" name="filter[direction]" value="{{ direction }}">

<div class="row">

    <div class="col-md-12">
        <h1>{{ translate("txt-affiliation-question-list") }} {{ affiliationQuestionLink(null,'new','button') }}</h1>

        <div class="row">
            <div class="col-md-6">
                <p class="lead">{{ translate("txt-affiliation-question-list-explanation") }}</p>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    {{ formelement(filter.get('search')) }}
                    <div class="input-group-append input-group-btn">
                        {{ formelement(form.get('submit')) }}
                    </div>
                </div>
            </div>
        </div>

        {% if paginator.pageRange > 0 %}
            <table class="table table-hover table-striped table-sm">
                <thead>
                <tr>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/affiliation/question/list', 'criteria': 'id', 'text': translate('txt-id')} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/affiliation/question/list', 'criteria': 'category', 'text': translate('txt-question')} %}</th>
                    <th>{% include 'application/partial/sortable-table-header' with {'route': 'zfcadmin/affiliation/question/list', 'criteria': 'sequence', 'text': translate('txt-sequence')} %}</th>
                    <th>{{ translate("txt-category") }}</th>
                </tr>
                </thead>
                <tbody>
                {% for question in paginator.getCurrentItems() %}
                    <tr>
                        <td>
                            {{ question.id }}
                            {{ affiliationQuestionLink(question, 'edit', 'icon') }}
                        </td>
                        <td>{{ affiliationQuestionLink(question, 'view', 'name') }}</td>
                        <td>{{ question.sequence }}</td>
                        <td></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% include 'application/partial/pagination-control' %}
        {% else %}
            {{ ztbalert().info(translate("txt-no-affiliation-question-categories-could-be-found"))|raw }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}

