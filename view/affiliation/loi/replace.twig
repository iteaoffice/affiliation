{% set project = loi.affiliation.project %}

{% do headTitle().append(translate("txt-replace-loi-for-organisation-%s-for-project-%s")|
format(loi.affiliation.parseBranchedName(), project)) %}



<h1>{{ translate("txt-replace-loi-for-organisation-%s-for-project-%s")|
    format(loi.affiliation.parseBranchedName(), project)|raw }}</h1>

<p class="lead">{{ translate("txt-replace-loi-for-organisation-%s-for-project-%s-explanation")|
    format(loi.affiliation.parseBranchedName(), project)|raw }}</p>


{% do form.prepare() %}
{% do form.setAttribute('class','form-horizontal') %}

{{ form().openTag(form)|raw }}

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-project") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ projectLink(affiliation.project,'view-community','name') }}
            ({{ project.call.program }})</p>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-organisation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ loi.affiliation.parseBranchedName() }}</p>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-download-current-loi") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ loiLink(loi,'download','text') }}</p>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-download-loi") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ translate("txt-download-loi-link-text") }}</p>
    </div>
</div>


{{ ztbformelement(form.get('file')) }}



<div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit'))|raw }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
