{% set affiliation = doa.affiliation %}
{% set project = affiliation.project %}

{% do headTitle().append(translate("txt-replace-doa-for-organisation-%s-for-project-%s")|
format(affiliation.organisation, project)) %}


<h1 class="display-4">{{ translate("txt-replace-doa-for-organisation-%s-for-project-%s")|
    format(affiliation.organisation, project)|raw }}</h1>

<p class="lead">{{ translate("txt-replace-doa-for-organisation-%s-for-project-%s-explanation")|
    format(affiliation.organisation, project)|raw }}</p>


{% do form.prepare() %}
{% do form.setAttribute('class','form-horizontal') %}

{{ form().openTag(form)|raw }}

<div class="form-group row">
    <label class="col-md-3 form-control-label control-label col-form-label">{{ translate("txt-project") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ projectLink(affiliation.project,'view-community','name') }}
            ({{ project.call.program }})</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-md-3 form-control-label control-label col-form-label">{{ translate("txt-organisation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ affiliation.organisation }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-md-3 form-control-label control-label col-form-label">{{ translate("txt-download-current-doa") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ doaLink(doa,'download','text') }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-md-3 form-control-label control-label col-form-label">{{ translate("txt-download-doa") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ translate("txt-download-doa-link-text") }}</p>
    </div>
</div>

{{ ztbformelement(form.get('file')) }}


<div class="form-group row">
    <div class="offset-md-3 col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit'))|raw }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
