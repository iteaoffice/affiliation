{% do headLink().appendStylesheet(
'//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/ui-lightness/jquery-ui.min.css'
) %}


{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-edit-affiliation-%s")|format(affiliationService.affiliation.displayName)) %}

<h1>{{ translate("txt-edit-affiliation-%s-in-%s")|format(
    affiliationService.affiliation.organisation.organisation,
    projectService.parseFullName()
    ) }}</h1>

{% set organisationService = organisationServiceProxy(
affiliationService.affiliation.organisation
) %}

{% do form.prepare() %}

{{ form().openTag(form)|raw }}


<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-project-name") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ projectLink(projectService,'view-community', 'name') }}</p>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-affiliation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ affiliationLink(affiliationService.affiliation,'view-community') }}</p>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-country") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ affiliationService.affiliation.organisation.country }}</p>
    </div>
</div>

{{ organisationformelement(form.get('organisation')) }}
{{ contactformelement(form.get('contact')) }}
{{ ztbformelement(form.get('branch')) }}

{{ ztbformelement(form.get('dateEnd')) }}
{{ ztbformelement(form.get('dateSelfFunded')) }}

{{ ztbformelement(form.get('valueChain')) }}
{{ ztbformelement(form.get('mainContribution')) }}
{{ ztbformelement(form.get('marketAccess')) }}


{{ organisationformelement(form.get('financialOrganisation')) }}
{{ contactformelement(form.get('financialContact')) }}
{{ ztbformelement(form.get('financialBranch')) }}
{{ ztbformelement(form.get('emailCC')) }}


<hr>

<div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
        {% if affiliationService.isActive() %}
            {{ ztbformelement(form.get('deactivate')) }}
        {% else %}
            {{ ztbformelement(form.get('reactivate')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}

<script type="text/javascript">
    $('input[type=date]').datepicker({
        sliderAccessArgs: {touchonly: false},
        dateFormat: 'yy-mm-dd'
    });
</script>