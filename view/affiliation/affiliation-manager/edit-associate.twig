{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-edit-contact-to-affiliation-%s-in-%s")|format(
affiliation.parseBranchedName(),
affiliation.project.parseFullName()
)) %}

<h1>{{ translate("txt-edit-contact-to-affiliation-%s-in-%s")|format(
    affiliation.parseBranchedName(),
    affiliation.project.parseFullName()
    ) }}</h1>

<p>{{ translate("txt-edit-contact-to-affiliation-explanation") }}</p>

{% do form.prepare() %}

{{ form().openTag(form)|raw }}


<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-project-name") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ projectLink(affiliation.project,'view-admin', 'name') }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-affiliation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ affiliationLink(affiliation,'view-community') }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-country") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ affiliation.organisation.country }}</p>
    </div>
</div>

{{ contactformelement(form.get('contact')) }}
{{ ztbformelement(form.get('affiliation')) }}

<div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('delete')) }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
