{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-add-contact-to-affiliation-%s-in-%s")|format(
affiliation.parseBranchedName(),
affiliation.project.parseFullName()
) ) %}

<h1 class="display-4">{{ translate("txt-add-contact-to-affiliation-%s-in-%s")|format(
    affiliation.parseBranchedName(),
    affiliation.project.parseFullName()
    ) }}</h1>

<p>{{ translate("txt-add-contact-to-affiliation-explanation") }}</p>

{% do form.prepare() %}

{{ form().openTag(form)|raw }}


<div class="form-group row">
    <label class="col-md-3 form-control-label control-label">{{ translate("txt-project-name") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ projectLink(affiliation.project,'view-community', 'name') }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-md-3 form-control-label control-label">{{ translate("txt-affiliation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ affiliationLink(affiliation,'view-community') }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-md-3 form-control-label control-label">{{ translate("txt-country") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ affiliation.organisation.country }}</p>
    </div>
</div>

{{ contactformelement(form.get('contact')) }}

<div class="form-group row">
    <div class="offset-md-3 col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
