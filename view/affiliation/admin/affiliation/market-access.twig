{% include 'affiliation/admin/affiliation/tabs' %}

<h2>{{ translate("txt-partner-market-access") }}</h2>

{% if affiliation.marketAccess %}
    <dl class="dl-horizontal">
        <dt>{{ translate("txt-market-access") }}</dt>
        <dd>{{ affiliation.marketAccess|nl2br }}</dd>
    </dl>
{% else %}
    {{ lbs5alert().warning(translate("txt-no-market-access-found-for-%s")|format(
        affiliation.parseBranchedName()
    ))|raw }}
{% endif %}

{{ affiliationLink(affiliation, 'edit-market-access-admin','button') }}