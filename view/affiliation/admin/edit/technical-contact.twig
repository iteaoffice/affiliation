{% do headTitle().append(translate("txt-admin")) %}
{% do headTitle().append(translate("txt-%s-in-%s")|format(affiliation.parseBranchedName(), affiliation.project.parseFullName())) %}
{% do headTitle().append(translate("txt-manage-technical-contact")) %}

<h1>{{ translate("txt-manage-technical-contacts") }}</h1>

{% do form.prepare() %}
{{ form().openTag(form)|raw }}

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-project") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ affiliation.project.parseFullName() }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-partner") }}</label>

    <div class="col-sm-9">
        <p class="form-control-plaintext">{{ affiliation.parseBranchedName() }}</p>
    </div>
</div>

{{ ztbformelement(form.get('technicalContact')) }}
{{ ztbformelement(form.get('proxyTechnicalContact')) }}

<div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}