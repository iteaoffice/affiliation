{% do headTitle().append(translate("txt-edit-affiliation-%s-in-%s")|format(
affiliation.parseBranchedName(),
affiliation.project.parseFullName()
)) %}

<h1 class="display-4">{{ translate("txt-edit-affiliation-%s-in-%s")|format(
    affiliation.parseBranchedName(),
    affiliation.project.parseFullName()
    ) }}</h1>

{% do form.prepare() %}

{{ form().openTag(form)|raw }}


<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-project-name") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ projectLink(affiliation.project,'view-community', 'name') }}</p>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-affiliation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ affiliationLink(affiliation,'view-community','organisation-branch') }}</p>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-organisation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ affiliation.organisation }}</p>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">{{ translate("txt-country") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static">{{ affiliation.organisation.country }}</p>
    </div>
</div>

{{ ztbformelement(form.get('affiliation')) }}
{{ ztbformelement(form.get('technical')) }}
{{ ztbformelement(form.get('financial')) }}
{{ ztbformelement(form.get('valueChain')) }}
{{ ztbformelement(form.get('mainContribution')) }}
{{ ztbformelement(form.get('strategicImportance')) }}
{{ ztbformelement(form.get('marketAccess')) }}
{{ ztbformelement(form.get('selfFunded')) }}


<hr>

<div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
        {% if form.has('deactivate') %}
            {{ ztbformelement(form.get('deactivate')) }}
        {% endif %}
        {% if affiliationHasCostOrEffortInDraft %}
            <button type="button" class="btn btn-danger"
                    disabled="disabled">{{ translate("txt-deactivate") }}</button> <i
                class="fa fa-info-circle cursor-help"
                title="{{ translate("txt-deactivation-of-partner-is-disabled-remove-cost-and-effort-in-draft-first") }}"></i>
        {% endif %}
        {% if form.has('reactivate') %}
            {{ ztbformelement(form.get('reactivate')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}
