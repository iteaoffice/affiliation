{% do headTitle().append(translate("txt-add-contact-to-affiliation-%s-in-%s")|format(
    affiliation.parseBranchedName(),
    affiliation.project.parseFullName()
    ) ) %}

<h1>{{ translate("txt-add-contact-to-affiliation-%s-in-%s")|format(
        affiliation.parseBranchedName(),
        affiliation.project.parseFullName()
    ) }}</h1>

<p>{{ translate("txt-add-contact-to-affiliation-explanation") }}</p>

{% do form.prepare() %}

{{ form().openTag(form)|raw }}


<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-project-name") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ projectLink(affiliation.project,'view-community', 'name') }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-affiliation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ affiliationLink(affiliation,'view-community') }} ({{ affiliation.organisation.country.iso3 }})</p>
    </div>
</div>

<fieldset>
    <legend>{{ translate("txt-add-known-contact") }}</legend>
    {{ ztbformelement(form.get('contact')) }}
    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            {{ ztbformelement(form.get('addKnownContact')) }}
            {{ ztbformelement(form.get('cancel')) }}
        </div>
    </div>
</fieldset>

<fieldset>
    <legend>{{ translate("txt-add-associate-by-company-email") }}</legend>
    {{ ztbformelement(form.get('email')) }}
    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            {{ ztbformelement(form.get('addEmail')) }}
            {{ ztbformelement(form.get('cancel')) }}
        </div>
    </div>
</fieldset>


{{ form().closeTag()|raw }}
