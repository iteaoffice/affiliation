{% do headTitle().append(translate("txt-edit-affiliation-description-%s-in-%s")|format(
affiliation.parseBranchedName(),
affiliation.project.parseFullName()
)) %}

<h1>{{ translate("txt-edit-affiliation-description-%s-in-%s")|format(
    affiliation.parseBranchedName(),
    affiliation.project.parseFullName()
    ) }}</h1>

{% do form.prepare() %}
{% do form.setAttribute('class','form-horizontal') %}

{{ form().openTag(form)|raw }}


<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-project-name") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ projectLink(affiliation.project,'view-community', 'name') }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-affiliation") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ affiliationLink(affiliation,'view-community') }}</p>
    </div>
</div>

<div class="form-group row">
    <label class="col-sm-3 col-form-label">{{ translate("txt-country") }}</label>

    <div class="col-sm-9">
        <p class="form-control-static form-control-plaintext">{{ affiliation.organisation.country }}</p>
    </div>
</div>

{{ ztbformelement(form.get('affiliation_entity_description').get('description')) }}
{{ ztbformelement(form.get('csrf')) }}

<div class="form-group row">
    <div class="offset-sm-3 col-sm-9">
        {{ ztbformelement(form.get('submit')) }}
        {{ ztbformelement(form.get('cancel')) }}
    </div>
</div>

{{ form().closeTag()|raw }}
