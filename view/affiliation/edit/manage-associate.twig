{% do headTitle().append(translate("txt-manage-associate-of-affiliation-%s-in-%s")|format(
    affiliation.parseBranchedName(),
    affiliation.project.parseFullName()
    ) ) %}

<h1 class="display-4">{{ translate("txt-manage-associate-of-affiliation-%s-in-%s")|format(
        affiliation.parseBranchedName(),
        affiliation.project.parseFullName()
    ) }}</h1>

<p>{{ translate("txt-manage-contact-to-affiliation-explanation-select-and-press-delete-button") }}</p>

<form class="form-horizontal" action="" method="post">

    <div class="form-group row">
        <label class="col-md-3 form-control-label control-label col-form-label">{{ translate("txt-project-name") }}</label>

        <div class="col-sm-9">
            <p class="form-control-static form-control-plaintext">{{ projectLink(affiliation.project,'view-community', 'name') }}</p>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-3 form-control-label control-label col-form-label">{{ translate("txt-affiliation") }}</label>

        <div class="col-sm-9">
            <p class="form-control-static form-control-plaintext">{{ affiliationLink(affiliation,'view-community') }}
                ({{ affiliation.organisation.country.iso3 }})</p>
        </div>
    </div>

    {% if affiliation.associate|length > 0 %}
        <table class="table table-striped table-hover table-condensed table-sm">
            <thead>
            <tr>
                <th>{{ translate("txt-select") }}</th>
                <th>{{ translate("txt-associate-name") }}</th>
                <th>{{ translate("txt-organisation") }}</th>
                <th>{{ translate("txt-country") }}</th>
                <th>{{ translate("txt-roles") }}</th>
            </tr>
            </thead>
            <tbody>
            {% for contact in affiliation.associate %}
                <tr>
                    <td><input type="checkbox" name="contact[]" value="{{ contact.id }}"></td>
                    <td>{{ contact.displayName }} <a
                                href="mailto:{{ contact.email }}"><i class="fa fa-envelope-o"></i></a></td>
                    <td>{{ contact.contactOrganisation.organisation }}</td>
                    <td>{{ contact.contactOrganisation.organisation.country }}</td>
                    <td>{{ translate("txt-associate") }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <input type="submit" class="btn btn-danger" name="delete" value="{{ translate("txt-remove-associate") }}">
        <input type="submit" class="btn btn-warning" name="cancel" value="{{ translate("txt-cancel") }}">
    {% else %}
        {{ ztbalert().info(translate("txt-no-associates-in-this-affiliation"))|raw }}
    {% endif %}
</form>
