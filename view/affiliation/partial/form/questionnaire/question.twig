{% do form.prepare() %}
{{ form().openTag(form)|raw }}
{{ formelement(form.get('csrf')) }}

{% set question = form.get('affiliation_entity_questionnaire_question') %}

{{ lbs5formelement(question.get('category')) }}
{{ lbs5formelement(question.get('question')) }}
{{ lbs5formelement(question.get('helpBlock')) }}
{{ lbs5formelement(question.get('placeholder')) }}
{{ lbs5formelement(question.get('inputType')) }}
{{ lbs5formelement(question.get('values')) }}
{{ lbs5formelement(question.get('required')) }}
{{ lbs5formelement(question.get('enabled')) }}

<div class="row mb-3">
    <div class="offset-sm-3 col-sm-9">
        {{ lbs5formelement(form.get('submit')) }}
        {{ lbs5formelement(form.get('cancel')) }}
        {% if form.has('delete') %}
            {{ lbs5formelement(form.get('delete')) }}
        {% endif %}
    </div>
</div>

{{ form().closeTag()|raw }}
